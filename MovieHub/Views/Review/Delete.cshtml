@model MovieHub.ViewModels.Review.DeleteReviewViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="container cont">
    <div class="well">
        <h2>@ViewBag.Title</h2>
        @using (Html.BeginForm("Delete", "Review", FormMethod.Post, new { @class = "form-horizontal" }))
            {
            @Html.HiddenFor(model => model.ReviewId)
            <div class="form-group">
                @Html.LabelFor(model => model.Content, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.Content, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "Details", new { controller = "Movie", @id = Model.MovieId }, new { @class = "btn btn-primary" })
                    <input type="submit" value="Delete" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>