@model MovieHub.Models.Review
@{
    ViewBag.Title = "Edit";
}

@Styles.Render("~/Content/editReview.css")


<h1 class="title text-center">Edit your review</h1>

@using (Html.BeginForm())
{
    <fieldset class="form-horizontal">
        <legend>Comment</legend>
        <div class="control-group">
            @Html.LabelFor(model => model.Content, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(model => model.Content)
                @Html.ValidationMessageFor(model => model.Content, null, new { @class = "help-inline" })
            </div>
        </div>
        <div class="form-actions no-color">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </fieldset>
}
